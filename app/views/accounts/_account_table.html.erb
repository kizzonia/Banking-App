<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">Personal Information </div>
    <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
                <%= @account.first_name %>
          </div>
          <div class="col-md-6">
              <%= @account :last_name,  %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
              <%= @account :phone_number,  %>
          </div>
          <div class="col-md-6">
              <%= @account :ssn,  %>
          </div>

        </div>
        <div class="row">
        <div class="col-md-12">
            <%= @account :date_of_birth, as: :datetime,  %>
        </div>
      </div>
      <div class="row">
      <div class="col-md-12">
          <%= @account :image, as: :file,  %>
      </div>
    </div>
      </div>
    </div>
  </div>
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">Address Information </div>
      <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <%= @account :address,  %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <%= @account :city,  %>
              </div>
              <div class="col-md-4">
                <%= @account :state,  %>
              </div>
              <div class="col-md-4">
                <%= @account :zip_code,  %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">Account Security </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <%= @account :account_type, :as => :select, collection: ["Checkings", "Savings", "Credit"] %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= @account :account_pin, as: :password,  %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= @account :verify_pin, as: :password,  %>
              </div>
            </div>
          </div>
        </div>
      </div>

  <div class="row">
    <div class="col-md-12">
        <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
