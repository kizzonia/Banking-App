<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">Personal Information </div>
    <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
              First Name:  <%= @account.first_name %>
          </div>
          <div class="col-md-6">
            Last Name  <%= @account.last_name  %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
              Phone Number <%= @account.phone_number  %>
          </div>
          <div class="col-md-6">
          SSN:    <%= @account.ssn  %>
          </div>

        </div>
        <div class="row">
        <div class="col-md-12">
        DOB:    <%= @account.date_of_birth  %>
        </div>
      </div>

      </div>
    </div>
  </div>
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">Address Information </div>
      <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
              Home Address  <%= @account.address %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
              City:  <%= @account.city  %>
              </div>
              <div class="col-md-4">
              State:  <%= @account.state  %>
              </div>
              <div class="col-md-4">
            Zip-Code:    <%= @account.zip_code  %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">Account Security </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
              Account Type:<%= @account.account_type%>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
            Account Pin:<%= @account.account_pin %>
              </div>
            </div>

          </div>
        </div>
      </div>

  <div class="row">
    <div class="col-md-12">
        <%= link_to "Edit Profile". edit_account_path(@account), class: "btn btn-primary" %>
    </div>
  </div>
