<p id="notice"><%= notice %></p>







<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-sm-12 col-xs-12 ">
        <div class="card card-user">
          <div class="image" style="background:rgb(201, 76, 6);">

          </div>
          <div class="content">
            <div class="author">
              <%= image_tag (@account.image_url.to_s), class: "avatar border-white" %>
              <h4 class="title">  <%= @account.first_name %> <%= @account.last_name %><br />
                <a href="#"><small>@<%= @account.account_number %></small></a>
              </h4>
            </div>
            <p class="description text-center" > Account Balance </p>
            <h3 class="text-center">
              $<%= @account.balance %>
            </h3>
          </div>
          <hr>
          <div class="text-center">
            <div class="row">
              <div class="col-md-8 col-md-offset-1">
                <h5>  Welcome</h5>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="row">
          <div class="col-lg-4 col-sm-6">
            <div class="card">
              <div class="content">
                <div class="row">

                  <div class="col-md-3">
                    <div class="icon-big icon-warning text-center">
                      <i class="ti-pin-alt"></i>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="numbers">
                      <p>Acount Number</p>
                      <%= @account.account_number%>

                    </div>
                  </div>
                </div>
                <div class="footer">
                  <hr />
                  <div class="stats">
                 <%= @account.routine_number %>
                  </div>
                </div>
              </div>
            </div>
          </div>


            <div class="col-lg-4 col-sm-6">
              <div class="card">
                <div class="content">
                  <div class="row">

                    <div class="col-md-3">
                      <div class="icon-big icon-warning text-center">
                        <i class="ti-pin-alt"></i>
                      </div>
                    </div>
                    <div class="col-md-9">
                      <div class="numbers">
                        <p>Account Type</p>
                        <%= @account.account_type%>

                      </div>
                    </div>
                  </div>
                  <div class="footer">
                    <hr />
                    <div class="stats">
                      <i class="ti-reload"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%= link_to new_account_transfer_path(@account) do %>
            <div class="col-lg-4 col-sm-6">
              <div class="card">
                <div class="content">
                  <div class="row">

                    <div class="col-md-3">
                      <div class="icon-big icon-warning text-center">
                        <i class="ti-pin-alt"></i>
                      </div>
                    </div>
                    <div class="col-md-9">
                      <div class="numbers">
                        <p>Bank Wire</p>
                        Transfer

                      </div>
                    </div>
                  </div>
                  <div class="footer">
                    <hr />
                    <div class="stats">
                      <i class="ti-reload"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <div class="row">
              <div class="content">
                <div class="row">
                  <div class="col-md-12">
                    <%= render 'accounts/view' %>
                  </div>
                </div>
              </div>
            </div>

        </div>
      </div>

    </div>
  </div>
