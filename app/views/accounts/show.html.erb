






<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-sm-12 col-xs-12 ">
        <div class="card card-user">
          <div class="image" style="background:rgb(201, 76, 6);">

          </div>
          <div class="content">
            <div class="author">
              <%= image_tag (@account.image_url.to_s), class: "avatar border-white" %>
              <h4 class="title">  <%= @account.first_name %> <%= @account.last_name %><br />
                <a href="#"><small>@<%= @account.account_number %></small></a>
              </h4>
            </div>
            <p class="description text-center" > Account Balance </p>
            <h3 class="text-center">
              $<%= @account.balance %>
            </h3>
          </div>
          <hr>
          <div class="text-center">
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <div class="row" style="padding-bottom:30px;">

                <%= button_tag :new_transfer, id: "tr_btn", class: "btn btn-primary" do %>
                  Make a transfer
                  <%end%>
                  </div>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="row">
          <div class="col-lg-4 col-sm-6">
            <div class="card">
              <div class="content">
                <div class="row">

                  <div class="col-md-3">
                    <div class="icon-big icon-warning text-center">
                      <i class="ti-pin-alt"></i>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="numbers">
                      <p>Acount Number</p>
                      <%= @account.account_number%>

                    </div>
                  </div>
                </div>
                <div class="footer">
                  <hr />
                  <div class="stats">
                 <%= @account.routine_number %>
                  </div>
                </div>
              </div>
            </div>
          </div>


            <div class="col-lg-4 col-sm-6">
              <div class="card">
                <div class="content">
                  <div class="row">

                    <div class="col-md-3">
                      <div class="icon-big icon-warning text-center">
                        <i class="ti-pin-alt"></i>
                      </div>
                    </div>
                    <div class="col-md-9">
                      <div class="numbers">
                        <p>Account Type</p>
                        <%= @account.account_type%>

                      </div>
                    </div>
                  </div>
                  <div class="footer">
                    <hr />
                    <div class="stats">
                      <i class="ti-reload"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4 col-sm-6">
              <div class="card">
                <div class="content">
                  <div class="row">

                    <div class="col-md-3">
                      <div class="icon-big icon-warning text-center">
                        <i class="ti-pin-alt"></i>
                      </div>
                    </div>
                    <div class="col-md-9">
                      <div class="numbers">
                        <p>Transactions</p>
                        0

                      </div>
                    </div>
                  </div>
                  <div class="footer">
                    <hr />
                    <div class="stats">
                      <i class="ti-reload"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <div class="row">
              <div class="content">
                <div class="row">
                  <div class="col-md-12">
                    <%= render 'accounts/view' %>
                  </div>
                </div>
              </div>
            </div>

        </div>
      </div>

    </div>
  </div>


    <!---second modal for withdraw -->
    <div class="modal" id="transModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog bounceIn animated" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Make A transfer</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

              <div class="row" >
                      <div class="card">
                          <div class="content">
                              <div class="row">
                                  <div class="col-xs-5">
                                      <div class="icon-big icon-success text-center">
                                          <i class="ti-wallet"></i>
                                      </div>
                                  </div>
                                  <div class="col-xs-7">
                                      <div class="numbers">

                                          <p>Revenue</p>
                                          $<%= @account.balance %>
                                      </div>
                                  </div>
                              </div>

                          </div>
                      </div>
                  </div>

              <%= render "transfers/form" %>

          </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
          </div>
        </div>
      </div>




    <%= javascript_include_tag 'view' %>
    <script type="text/javascript">
    $(document).ready(function() {
      view.init();
    });
    </script>
