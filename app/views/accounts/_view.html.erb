<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">Personal Information </div>
    <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
          <p><strong>First Name: </strong><%= @account.first_name %></p>
          </div>
          <div class="col-md-6">
            <p><strong> Last Name: </strong><%= @account.last_name  %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <p><strong>Phone Number: </strong> <%= @account.phone_number  %></p>
          </div>
          <div class="col-md-6">
          <p><strong>SSN:</strong> <%= @account.ssn  %></p>
          </div>

        </div>
        <div class="row">
        <div class="col-md-12">
      <p><strong> DOB: </strong><%= @account.date_of_birth  %></p>
        </div>
      </div>

      </div>
    </div>
  </div>
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">Address Information </div>
      <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
            <p><strong> Home Address:</strong> <%= @account.address %> </p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
        <p><strong>City:</strong> <%= @account.city  %> </p>
              </div>
              <div class="col-md-4">
          <p><strong> State:</strong> <%= @account.state  %></p>
              </div>
              <div class="col-md-4">
          <p><strong> Zip-Code:</strong> <%= @account.zip_code  %> </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">Account Security </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
            <p><strong>  Account Type:</strong><%= @account.account_type%> </p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
          <p><strong>  Account Pin: </strong><%= @account.account_pin %></p>
              </div>
            </div>

          </div>
        </div>
      </div>

  <div class="row">
    <div class="col-md-12">
        <%= link_to "Edit Profile", edit_account_path(@account), class: "btn btn-primary text-center" %>
    </div>
  </div>
